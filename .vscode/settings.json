{
  "hardhat.telemetry": false,
  "[solidity]": {
    "editor.defaultFormatter": "NomicFoundation.hardhat-solidity"
  },
  "hardhat-language-server.trace.server.verbosity": "verbose",
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.general.debug": true,
  "todo-tree.general.tags": [
    "BUG",
    "NOTE",
    "TODO",
    "THINK",
    "FUTURE",
    "REMOVE",
    "DOCUMENT"
  ],
  "todo-tree.highlights.customHighlight": {
    "NOTE": {
      "background": "white",
      "foreground": "black"
    },
    "REMOVE": {
      "background": "red",
      "foreground": "white"
    },
    "BUG": {
      "background": "maroon",
      "foreground": "white"
    },
    "FUTURE": {
      "background": "aqua",
      "foreground": "black"
    },
    "THINK": {
      "background": "green",
      "foreground": "black"
    },
    "DOCUMENT": {
      "background": "green",
      "foreground": "white"
    },
  }
}